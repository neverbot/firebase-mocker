{
  "name": "firebase-mocker",
  "version": "0.0.1",
  "description": "A modern TypeScript-based Firestore emulator server for local development and testing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "dev": "ts-node src/index.ts",
    "start": "node dist/index.js",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build",
    "test": "NODE_ENV=test npx c8 mocha",
    "test:only": "NODE_ENV=test npx mocha",
    "lint": "npx eslint .",
    "lint:fix": "npx eslint --fix .",
    "lint:quiet": "npx eslint . --quiet"
  },
  "files": [
    "dist",
    "readme.md",
    "local_install.md"
  ],
  "keywords": [
    "firebase",
    "firestore",
    "emulator",
    "mock",
    "testing"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/chai": "^5.2.3",
    "@types/express": "^5.0.6",
    "@types/mocha": "^10.0.10",
    "@types/node": "^25.2.0",
    "@types/winston": "^2.4.4",
    "c8": "^10.1.3",
    "chai": "^6.2.2",
    "eslint": "^9.39.2",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "firebase": "^12.8.0",
    "firebase-admin": "^13.6.0",
    "globals": "^17.3.0",
    "mocha": "^11.7.5",
    "prettier": "^3.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "@grpc/grpc-js": "^1.14.3",
    "@types/protobufjs": "^6.0.0",
    "express": "^5.2.1",
    "protobufjs": "^8.0.0",
    "winston": "^3.19.0"
  }
}
